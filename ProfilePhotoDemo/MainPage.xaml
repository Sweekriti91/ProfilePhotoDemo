<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfilePhotoDemo.MainPage">

  <StackLayout Margin="20,20,20,20" VerticalOptions="FillAndExpand" BindingContext=".">

        <Grid>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="Rotate"  Grid.Column="1" FontSize="Medium" x:Name="rotatePhotoClock" HorizontalOptions="CenterAndExpand" />
        </Grid>

        <GraphicsView x:Name="image"
                          HorizontalOptions="CenterAndExpand"
                          VerticalOptions="CenterAndExpand"
                          HeightRequest="350"
                          WidthRequest="350" />

        <Grid VerticalOptions="End" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="Take Photo" Grid.Column="0" HorizontalOptions="FillAndExpand" CornerRadius="0" Margin="0" 
                x:Name="takePhoto"/>
            <Button Text="Choose Photo" Grid.Column="1"
                    FontFamily="FuturaDemi" HorizontalOptions="FillAndExpand" CornerRadius="0" Margin="10,0,0,0"
                x:Name="pickPhoto"/>
        </Grid>

    </StackLayout>

</ContentPage>

